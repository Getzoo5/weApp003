.weui-navbar{
  border: none;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  left: 0
}
.card-item{
  width: 100%;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 6rpx
}
.weui-cell{
  padding: 0 30rpx 20rpx
}
.weui-cell__bd>view:first-of-type{
  font-size: 32rpx
}
.weui-cell__bd>view:first-of-type text{
  vertical-align: middle
}
.weui-cell__bd>view:first-of-type text:last-of-type{
  font-weight: 600
}
.weui-cell__bd>view:first-of-type text:first-of-type{
  display: inline-block;
  background: #FF6097;
  color: #fff;
  font-size: 24rpx;
  padding: 0 6rpx;
  border-radius: 6rpx
}
.card-item-img{
  width: 100%;
  height: 421rpx
}

.card-item-tit{
  padding: 4rpx 20rpx;
  box-sizing: border-box;
  font-size: 30rpx
}
.card-item-tit>view:first-of-type{
  width: 60%;
  display: inline-block;
  vertical-align: middle;
  white-space: nowrap;text-overflow: ellipsis;overflow : hidden
}
.card-item-data{
  font-size: 24rpx;
  color: #666A6E;
  width: 40%;
  display: inline-block;
  text-align: right;
  vertical-align: middle
}
.card-item-data image,
.card-item-data view{
  vertical-align: middle;
  display: inline-block
}
.card-item-data image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 16rpx 0 20rpx;
}

.weui-tab__panel{
  padding-bottom: 200rpx
}