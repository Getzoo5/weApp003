page{
  padding-top: 560rpx
}
.discover-poster{
  width: 100%;
  position: fixed;
  z-index: 0;
  top: 0
}
.discover-nav{
  position: relative;
  width: 100%;
  background: #fff;
}
.discover-c{
  width: 100%;
  height: 50rpx;
  position: absolute;
  top: -48rpx;
}
.discover-navbar{
  width: 100%;
  padding: 10rpx 0 30rpx;
  overflow: hidden
}
.discover-navbar-item{
  width: 25%;
  float: left;
}
.discover-navbar-item image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto
}
.discover-navbar-item view{
  text-align: center;
  font-size: 24rpx;
}

.discover-tit{
  font-size: 34rpx;
  text-align: center;
  padding: 20rpx 0;
  background: #fff;
  position: relative
}
.discover-items{
  padding-top: 20rpx;
  background: #fff;
  overflow: hidden;
  position: relative
}
.discover-item{
  padding-bottom: 20rpx;
}
.discover-double .discover-item{
  width: 374rpx;
  float: left
}
.discover-double .discover-item:nth-of-type(2n){
  margin-left: 2rpx;
  float: right
}
.discover-Triple .discover-item{
  width: 248rpx;
  display: block
}
.discover-Triple .discover-item:nth-of-type(3n){
  margin: 0 auto;
}
.discover-Triple .discover-item:nth-of-type(3n-1){
  float: right;
}
.discover-Triple .discover-item:nth-of-type(3n-2){
  float: left
}

.discover-item image{
  width: 100%;
  height: 374rpx;
}
.discover-item .discover-item-name,
.discover-item .discover-item-des{
  padding: 0 20rpx;
  font-size: 28rpx;
  white-space: nowrap;text-overflow: ellipsis;overflow : hidden
}
.discover-item .discover-item-des{
  font-size: 24rpx
}
.discover-items-btn{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: block
}
.discover-items-btn button[plain]{
  width: 350rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #F7F9FA;
  border: none;
  padding: 0;margin: 0;
  display: inline-block;
  color: #74787D;
  font-size: 22rpx
}
.discover-items-btn button[plain] image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 6rpx;
  margin-bottom: 2rpx;
}
.discover-items-btn button[plain] text{
  vertical-align: middle;
  margin-bottom: 6rpx;
  display: inline-block
}
.discover-items-btn button[plain]:nth-of-type(2){
  float: right
}

.ad-img{
  width: 100%;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 20rpx
}

.discover-more{
  width: 100%;
  padding: 50rpx 40rpx;
  box-sizing: border-box;
  position: relative;
  background: #fff
}
.discover-more button[plain]{
  font-size: 34rpx;
  padding: 0;
  margin: 0;
  display: inline-block;
  width: 48%;
  height: 90rpx;
  line-height: 80rpx;
  border-radius: 45rpx;
  border: #3B74B4 solid 2rpx;
  color: #3B74B4
}
.discover-more button[plain] image{
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  margin-right: 30rpx
}
.discover-more button[plain] text{
  vertical-align: middle;
  line-height: 1
}
.discover-more button[plain]:nth-of-type(2){
  float: right;
  border: #df675b solid 2rpx;
  color: #df675b
}